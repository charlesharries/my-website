<div class="container">
  <div class="back">
    <%= link_to "< Back", posts_path %>
  </div>
  <div class="blog-content">
    <h6><%= @post.created_at.strftime('%b %d, %Y') %></h6>
    <h1><%= @post.title %></h1>
    <h5><%= @post.subtitle %></h5>
    <div class="post-body">
      <%= markdown(@post.content) %>
    </div>
    <% if current_user %>
      <%= link_to "Edit post", edit_post_path(@post) %>
    <% end %>
  </div>
</div>
